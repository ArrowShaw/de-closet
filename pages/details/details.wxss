/* pages/details/details.wxss */
.container{
  margin: 60rpx 60rpx;
}

.text {
  font-size: 36rpx;
  color: #18181A;
}

.photo_container {
  width: 640rpx;
  height: 640rpx;
  background-color: #FFFFFF;
  border-radius: 10rpx;
  margin: 60rpx auto;
}

.uploadImg {
  width: 640rpx;
  height: 640rpx;
  border-radius: 16rpx;
}

.tag {
  display: flex;
  flex-direction: row !important;
  flex-wrap: wrap;
  gap: 0rpx 8rpx;
  justify-content: center;
}

.label_view {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 1rpx 10rpx;
  width: 110rpx;
  height: 50rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  border-radius: 12rpx;
  color: white;
  background-color: #C4C4C4;
  margin-right: 5rpx;
  margin-top:15rpx;
}

.section {
  width: 640rpx;
  height: 240rpx;
  display: flex; flex-direction: column; justify-content: center; align-items: center; gap:20rpx;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.25);
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 16rpx 0;
  margin: 50rpx 0;
}

.active {
  background: #F2CE44;
}

.submit-button{
  display: flex; 
  justify-content: center;
  margin: 60rpx 0;
  gap: 50rpx;
}

.btn{
  font-size: 38rpx;
  width: 300rpx !important;
  border-radius: 16rpx;
  padding: 18rpx;
  color: white;
  background-color: #7EBC69;
}