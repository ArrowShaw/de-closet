<!--pages/upload/upload.wxml-->
<navbar back text='Upload an item' />
<view class="container">
  <view class="text h1">You can still add xx items</view>
  <view class="addImg" bindtap="chooseImg">
    <image class="upload" src="/images/icons/photo.png"></image>
    <view class="text h2">Upload a Photo</view>
  </view>

  <view class="section">
    <view class="text h2">Keep this Item</view>
   
    <radio-group class="group" bindchange="radioChange">
      <view class="radio-options">
        <view class="label" wx:for="{{radioItems}}">
          <radio id="{{item.name}}" value="{{item.name}}" checked="{{item.checked}}"></radio>
          <label class="label-text" for="{{item.name}}"><text>{{item.name}}</text></label>
        </view>
      </view>
    </radio-group>
    
  </view>

  <view class="section">
    <view class="text">Pick a category</view>
    <picker-view indicator-style="height: 50px;" style="width: 100%; height: 100px;" value="{{value}}" bindchange="bindChange">
      <picker-view-column class="label">
        <view wx:for="{{categories}}" wx:key="{{categories}}" style="line-height: 50px; text-align: center;">{{item}}</view>
      </picker-view-column>
    </picker-view>
  </view>

  <view class="">
    <view class="text">Pick your tags</view>
      <block wx:for="{{ typeArray }}">
        <view class="label_view {{item.selected? 'active':''}}" data-value='{{item.name}}' bindtap='dealTap' checked="{{item.selected}}" data-index='{{index}}'>
          {{ item.name }}
        </view>
      </block>
      <van-popup show="{{show}}" bind:close="onClose" close-on-click-overlay="{{false}}" overlay="false">
        <view class="input_view">
          <text>Add your own tag:</text>
          <input type="text" class="input" placeholder="maximum 1 word" bindinput="bindValue"></input>
          <button catchtap="onInputValue" class="determine_button">Save</button>
          <button catchtap="onCancel" class="determine_button">Cancel</button>
        </view>
      </van-popup>
      <image bindtap="addinput" class="img" src="/images/icons/add.png"></image>
  </view>


  <input placeholder="Descriptions" />
  <button formType="submit">Save</button>
</view>