/* pages/upload/upload.wxss */
.text {
  font-size: 38rpx;
  color:#35312A;
}

.section {
  width: 640rpx;
  height: 240rpx;
  display: flex; flex-direction: column; justify-content: center; align-items: center; gap:20rpx;
  margin: 24rpx 58rpx;
  /* margin: 40rpx auto; */
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
  background-color: #FFFFFF;
  border-radius: 16rpx;
}

.addImg {
  height: 300rpx !important;
  display: flex; flex-direction: column; align-items: center; justify-content: center; gap:20rpx;
  box-sizing: border-box;
}

.addImg .upload {
  width: 100rpx; height: 90rpx;
}

.h1 {
  padding: 12rpx 58rpx;
  font-size: 42rpx;
  font-weight: 500;
}

.h2 {
  text-align: center;
}

.label{
  color: #C4C4C4;
  font-size: 32rpx;
}

.radio-options{
  display: flex;
  gap: 300rpx;
}

.label_view  {
  display: flex !important;
}