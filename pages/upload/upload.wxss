/* pages/upload/upload.wxss */
.container {
  padding: 58rpx;
}

.text {
  padding-bottom: 20rpx;
}
.addImg {
  width: 640rpx;
  height: 300rpx;
  display: flex; flex-direction: column; align-items: center; justify-content: center; gap:20rpx;
  margin: 20rpx auto;
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
  background-color: #FFFFFF;
  border-radius: 16rpx;
  box-sizing: border-box;
}

.addImg .upload {
  width: 100rpx; height: 90rpx;
}

.section {
  width: 640rpx;
  height: 200rpx;
  display: flex; flex-direction: column; justify-content: center; align-items: center; gap:20rpx;
  padding-top: 30rpx;
  margin: 40rpx auto;
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
  background-color: #FFFFFF;
  border-radius: 16rpx;
}

.text{
  font-size: 38rpx;
  color:#18181A
}

.h1 {
  font-size: 42rpx;
  font-weight: 500;
}

.label{
  color: #C4C4C4;
  font-size: 32rpx;
}

.radio-options{
  display: flex;
  gap: 300rpx;
}

.label_view {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 1rpx 10rpx;
  width: 140rpx;
  height: 50rpx;
  border: 1rpx solid black;
  font-size: 26rpx;
  border-radius: 12rpx;
  color: black;
  margin-right: 5rpx;
  margin-top:15rpx;
}

.active {
  background: #7EBC69;
  border: 1rpx solid black;
}
