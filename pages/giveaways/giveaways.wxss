/* pages/giveaways/giveaways.wxss */

.list {
  display: flex; flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-evenly; align-items: center;
  gap: 20rpx;
}

.photo_container {
  width: 300rpx;
  height: 300rpx;
  border-radius: 16rpx 16rpx 0 0;
  margin: auto;
}

.item_container {
  box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.25);
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding-bottom: 10rpx;
  margin-bottom: 16rpx;
}

.container {
  padding: 50rpx;
}

.text {
  font-size: 40rpx;
  font-weight: 500;
  margin-bottom: 60rpx;
  color: #18181A;
}

.btn {
  font-size: 38rpx;
  width: 480rpx !important;
  padding: 16rpx;
  margin-top: 120rpx;
  color: white;
  background-color: #7EBC69;
  border-radius: 20rpx;
}

.likes {
  display: flex; flex-direction: row; 
  align-items: center;
  gap: 10rpx;
  color: gray;
  margin: 0 8rpx;
}

.likebtn {
  width: 36rpx;
  height: 36rpx;
}