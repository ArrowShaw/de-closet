/* pages/giveaways/giveaways.wxss */

.list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between; align-items: center;
  gap: 10rpx;
}

.photo_container {
  width: 300rpx;
  height: 300rpx;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.25);
  background-color: #FFFFFF;
  border-radius: 16rpx;
  margin: 10rpx 0;
}
.container {
  padding: 60rpx;
}

.text {
  font-size: 40rpx;
  font-weight: 500;
  margin-bottom: 60rpx;

.img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-color: white;
  border: 2px solid #18181A;
  margin-top: 50rpx;
}