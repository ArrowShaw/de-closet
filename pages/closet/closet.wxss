/* pages/closet/closet.wxss */
.img {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  background-color: white;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.25);
  /* border: 2px solid #18181A; */
  margin: 50rpx 0 26rpx;
}

.text {
  font-size: 36rpx;
  color:#18181A;
  font-weight: 500;
}

.title {
  text-align: left;
  padding: 20rpx 0;
}

.top-bar{
  display: flex; justify-content: center; align-items: center; gap: 20rpx;
  margin: 60rpx 0;
}

.me-section {
  display: flex; flex-direction: column; justify-content: center; align-items: center;
}

.edit-section{
  display: flex; flex-direction: row; justify-content: center; align-items: center; gap: 10rpx;
}

.edit-btn {
  width: 52rpx; height: 52rpx;
}

.category-section {
  display: flex; flex-direction: column;
}

.clothes-pic {
  width: 350rpx; height: 340rpx;
}

.empty-section {
  display: flex; 
  flex-direction: column;
  align-items: center;
  margin: 120rpx auto;
  text-align: center;
  color: #5C636E;
  font-weight: 400 !important;
}

.empty-btn {
  width: 120rpx; height: 120rpx;
  padding-bottom: 30rpx;
}

.container {
  display: flex; gap: 20rpx;
  overflow-x: scroll;
}

.active {
  background-color: #F2CE44;
}