/* pages/closet/closet.wxss */
.img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-color: white;
  border: 2px solid #18181A;
  margin-top: 50rpx;
}

.text {
  font-size: 36rpx;
  color:#18181A;
  font-weight: 500;
}

.title {
  text-align: left;
  padding: 20rpx 0;
}

.top-bar{
  display: flex; justify-content: center; align-items: center; gap: 60rpx;
  margin-top: 50rpx;
}

.me-section {
  display: flex; flex-direction: column; justify-content: center; align-items: center; gap:28rpx;
}

.edit-section{
  display: flex; justify-content: center; align-items: center; gap: 10rpx;
}

.edit-btn {
  width: 60rpx; height: 60rpx;
}

.category-section {
  display: flex; flex-direction: row;
}

.clothes-pic {
  width: 350rpx; height: 340rpx;
}