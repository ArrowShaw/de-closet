/* pages/giveaways/giveaways.wxss */

.list {
  display: flex; flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-evenly; align-items: center;
  gap: 16rpx;
}

.photo_container {
  width: 300rpx;
  height: 300rpx;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.25);
  background-color: #FFFFFF;
  border-radius: 16rpx;
  margin: auto;
}
.container {
  padding: 50rpx;
}

.text {
  font-size: 40rpx;
  font-weight: 500;
  margin-bottom: 60rpx;
  color: #18181A;
}

.btn {
  font-size: 38rpx;
  width: 480rpx !important;
  padding: 16rpx;
  margin-top: 120rpx;
  color: white;
  background-color: #7EBC69;
  border-radius: 20rpx;
}

.likebtn {
  width: 100rpx;
  height: 100rpx;
}