/* components/giveaway/giveaway.wxss */
.container {
  display: flex-column;
  flex-wrap: wrap;
  /* padding: 0rpx 60rpx; */
  padding-left: 60rpx;
}

.right-btn {
  width: 60rpx; height: 60rpx;
}

.category-bar {
  display: flex; justify-content: space-between; align-items: center; 
  width: 640rpx;
}

.category-container {
  display: flex; gap: 20rpx;
  width: 100%;
  overflow-x: scroll;
}

.photo_container {
  width: 300rpx;
  height: 300rpx;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.25);
  background-color: #FFFFFF;
  border-radius: 16rpx;
  margin: 10rpx 0;
}