<!--components/category/category.wxml-->
<view>{{category}}</view>
<view class="container">
  <view class="category-bar">
    <text>{{collection.category}}</text>
    <image class="right-btn" src="/images/icons/right.png"></image>
  </view>
  <view wx:if="{{collection.items.length == 0}}">Your closet is empty. Please add items!</view>
  <view class="category-container">  
    <block wx:if="{{collection.items != 0}}" wx:for="{{collection.items}}">
      <view class="photo_container" wx:for_item="{{item}}">
        <text>{{item.remark}}</text>
        <!-- <image src="{{item.photo}}" alt="PHOTO" /> -->
      </view>
    </block>
  </view>
</view>